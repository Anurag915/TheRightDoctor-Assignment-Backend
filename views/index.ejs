<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>People List</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container my-5">

    <!-- Card Wrapper -->
    <div class="card shadow-lg">
      <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h3 class="mb-0">👥 People List</h3>
        <a href="/person/new" class="btn btn-light fw-bold">➕ Add New Person</a>
      </div>

      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-hover table-bordered align-middle text-center">
            <thead class="table-secondary">
              <tr>
                <th scope="col">👤 Name</th>
                <th scope="col">🎂 Age</th>
                <th scope="col">⚧️ Gender</th>
                <th scope="col">📞 Mobile</th>
                <th scope="col">🔧 Actions</th>
              </tr>
            </thead>
            <tbody>
              <% if (people.length === 0) { %>
                <tr>
                  <td colspan="5" class="text-muted">No people found. Please add some entries.</td>
                </tr>
              <% } %>
              <% people.forEach(person => { %>
                <tr>
                  <td><%= person.name %></td>
                  <td><%= person.age %></td>
                  <td><%= person.gender %></td>
                  <td><%= person.mobile %></td>
                  <td>
                    <a href="/person/<%= person._id %>/edit" class="btn btn-sm btn-outline-warning me-2">✏️ Edit</a>
                    <a href="/person/<%= person._id %>/delete" class="btn btn-sm btn-outline-danger">🗑️ Delete</a>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

  </div>
</body>
</html>
